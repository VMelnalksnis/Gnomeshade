@using Tracking.Finance.Web.Controllers;
@using Tracking.Finance.Web.Models.Units;

@model UnitCreationModel

<form asp-controller="Unit" asp-action="@nameof(UnitController.Create)" method="post">
	@Html.ValidationSummary()
	@Html.HiddenFor(model => model.FinanceUserId)
	@Html.HiddenFor(model => model.Units)
	<div class="form-group">
		@Html.DisplayNameFor(model => model.Name)
		@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(model => model.Name)
	</div>
	<div class="form-group">
		@Html.DisplayNameFor(model => model.Exponent)
		@Html.EditorFor(model => model.Exponent, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(model => model.Exponent)
	</div>
	<div class="form-group">
		@Html.DisplayNameFor(model => model.Mantissa)
		@Html.EditorFor(model => model.Mantissa, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(model => model.Mantissa)
	</div>
	<div class="form-group">
		@Html.DisplayNameFor(model => model.ParentUnitId)
		<select asp-for="@Model.ParentUnitId" asp-items="@Model.Units" class="form-control"></select>
		@Html.ValidationMessageFor(model => model.ParentUnitId)
	</div>
	<button type="submit" class="btn btn-success">Create</button>
</form>