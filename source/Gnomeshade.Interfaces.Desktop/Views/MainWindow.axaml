<Window
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="using:Gnomeshade.Interfaces.Desktop.ViewModels"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	x:Class="Gnomeshade.Interfaces.Desktop.Views.MainWindow"
	Icon="/Assets/avalonia-logo.ico"
	Title="Gnomeshade"

	WindowStartupLocation="CenterScreen"
	TransparencyLevelHint="AcrylicBlur"
	Background="Transparent"
	ExtendClientAreaToDecorationsHint="False"

	x:CompileBindings="True"
	x:DataType="vm:MainWindowViewModel">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					TintColor="Black"
					TintOpacity="1"
					MaterialOpacity="0.65" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<DockPanel>
			<Menu DockPanel.Dock="Top" FontSize="18">
				<MenuItem Header="_File">
					<MenuItem
						x:Name="Logout" Header="_Logout"
						IsEnabled="{Binding CanLogOut}"
						Command="{ReflectionBinding LogOut}" />
					<MenuItem
						x:Name="Exit" Header="E_xit"
						Command="{ReflectionBinding Exit}" />
				</MenuItem>
				<MenuItem Header="_Edit" IsVisible="{Binding CanLogOut}">
					<MenuItem
						x:Name="CreateAccount" Header="Create _Account"
						Command="{ReflectionBinding CreateAccountAsync}" />
					<MenuItem
						x:Name="CreateTransaction" Header="Create _Transaction"
						Command="{ReflectionBinding CreateTransaction}" />
					<MenuItem
						x:Name="CreateProduct" Header="Create _Product"
						Command="{ReflectionBinding CreateProductAsync}" />
					<MenuItem
						x:Name="CreateUnit" Header="Create _Unit"
						Command="{ReflectionBinding CreateUnitAsync}" />
					<MenuItem
						x:Name="Accounts" Header="Accounts"
						Command="{ReflectionBinding SwitchToAccountOverviewAsync}" />
					<MenuItem
						x:Name="Transactions" Header="Transactions"
						Command="{ReflectionBinding SwitchToTransactionOverviewAsync}" />
					<MenuItem
						x:Name="Import" Header="_Import"
						Command="{ReflectionBinding SwitchToImport}"/>
				</MenuItem>
			</Menu>

			<UserControl
				Content="{Binding ActiveView}"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
		</DockPanel>
	</Panel>

</Window>
