<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:m="using:Gnomeshade.Interfaces.Desktop.Models"
	xmlns:vm="using:Gnomeshade.Interfaces.Desktop.ViewModels"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	x:Class="Gnomeshade.Interfaces.Desktop.Views.TransactionView"
	x:CompileBindings="True"
	x:DataType="vm:TransactionViewModel">
	<Design.DataContext>
		<vm:TransactionViewModel />
	</Design.DataContext>

	<StackPanel Orientation="Vertical">
		<Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto, Auto,Auto">
			<DatePicker
				Grid.Column="0" Grid.Row="0"
				SelectedDate="{Binding From, Mode=TwoWay}"
				Header="From:" />
			<DatePicker
				Grid.Column="1" Grid.Row="0"
				SelectedDate="{Binding To, Mode=TwoWay}"
				Header="To:" />

			<Button
				Grid.Column="0" Grid.Row="1"
				Command="{ReflectionBinding Search}">
				Search
			</Button>
		</Grid>
		<DataGrid
			Items="{Binding Transactions^, Mode=OneWay}"
			AutoGenerateColumns="False" IsReadOnly="False"
			CanUserReorderColumns="True" CanUserResizeColumns="True" CanUserSortColumns="True">
			<DataGrid.Columns>
				<DataGridCheckBoxColumn
					x:DataType="m:TransactionOverview"
					IsReadOnly="False"
					Binding="{Binding Selected, Mode=TwoWay}">
					<DataGridCheckBoxColumn.Header>
						<CheckBox
							x:DataType="vm:TransactionViewModel"
							IsChecked="{Binding SelectAll}" />
					</DataGridCheckBoxColumn.Header>
				</DataGridCheckBoxColumn>
				<DataGridTextColumn
					x:DataType="m:TransactionOverview"
					IsReadOnly="True" Header="Date"
					Binding="{Binding Date, Mode=OneWay}" />
				<DataGridTextColumn
					x:DataType="m:TransactionOverview"
					Header="Description" IsReadOnly="True"
					Binding="{Binding Description, Mode=OneWay}" />
				<DataGridTextColumn
					x:DataType="m:TransactionOverview"
					Header="Source Account" IsReadOnly="True"
					Binding="{Binding SourceAccount, Mode=OneWay}" />
				<DataGridTextColumn
					x:DataType="m:TransactionOverview"
					Header="Target Account" IsReadOnly="True"
					Binding="{Binding TargetAccount, Mode=OneWay}" />
				<DataGridTextColumn
					x:DataType="m:TransactionOverview"
					Header="Source Amount" IsReadOnly="True"
					Binding="{Binding SourceAmount, Mode=OneWay, StringFormat=\{0:N2\}}" />
				<DataGridTextColumn
					x:DataType="m:TransactionOverview"
					Header="Target Amount" IsReadOnly="True"
					Binding="{Binding TargetAmount, Mode=OneWay, StringFormat=\{0:N2\}}" />
			</DataGrid.Columns>
		</DataGrid>
	</StackPanel>
</UserControl>
