<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:c="clr-namespace:Gnomeshade.Interfaces.Avalonia.Core.Counterparties;assembly=Gnomeshade.Interfaces.Avalonia.Core"
	xmlns:dd="clr-namespace:Gnomeshade.Interfaces.Avalonia.Core.DesignTime;assembly=Gnomeshade.Interfaces.Avalonia.Core"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	d:DataContext="{x:Static dd:DesignTimeData.CounterpartyUpdateViewModel}"
	x:Class="Gnomeshade.Interfaces.Desktop.Views.Counterparties.CounterpartyUpdateView"
	x:CompileBindings="True"
	x:DataType="c:CounterpartyUpdateViewModel">

	<StackPanel Orientation="Vertical" Spacing="5">
		<TextBox Text="{Binding Name}" />
		<TextBlock Text="{Binding ErrorMessage}"/>
		<Button IsEnabled="{Binding CanSave}" Command="{ReflectionBinding SaveAsync}">
			Save
		</Button>
	</StackPanel>
</UserControl>
