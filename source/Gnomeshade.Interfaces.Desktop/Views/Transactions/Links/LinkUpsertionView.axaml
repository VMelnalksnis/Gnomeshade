<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:design="clr-namespace:Gnomeshade.Interfaces.Avalonia.Core.DesignTime;assembly=Gnomeshade.Interfaces.Avalonia.Core"
	xmlns:links="clr-namespace:Gnomeshade.Interfaces.Avalonia.Core.Transactions.Links;assembly=Gnomeshade.Interfaces.Avalonia.Core"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	d:DataContext="{x:Static design:DesignTimeData.LinkUpsertionViewModel}"
	x:Class="Gnomeshade.Interfaces.Desktop.Views.Transactions.Links.LinkUpsertionView"
	x:CompileBindings="True"
	x:DataType="links:LinkUpsertionViewModel">

	<Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
		<TextBlock
			Grid.Column="0" Grid.Row="0"
			Margin="5"
			VerticalAlignment="Center"
			Text="Link:" />
		<TextBox
			Grid.Column="1" Grid.Row="0"
			MinWidth="150"
			Text="{Binding UriValue}" />

		<Button
			Grid.Column="0" Grid.Row="1"
			IsEnabled="{Binding CanSave}"
			Command="{ReflectionBinding SaveAsync}">
			Save
		</Button>
		<TextBlock
			Grid.Column="1" Grid.Row="1"
			Text="{Binding ErrorMessage}" />
	</Grid>
</UserControl>
