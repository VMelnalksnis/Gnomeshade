<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="using:Gnomeshade.Interfaces.Desktop.ViewModels"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:dd="using:Gnomeshade.Interfaces.Desktop.ViewModels.Design"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	d:DataContext="{x:Static dd:DesignTimeData.CounterpartyUpdateViewModel}"
	x:Class="Gnomeshade.Interfaces.Desktop.Views.CounterpartyUpdateView"
	x:CompileBindings="True"
	x:DataType="vm:CounterpartyUpdateViewModel">

	<StackPanel Orientation="Vertical" Spacing="5">
		<TextBox Text="{Binding Name}" />
		<Button IsEnabled="{Binding CanUpdate}" Command="{ReflectionBinding UpdateAsync}">
			Update
		</Button>
	</StackPanel>
</UserControl>
